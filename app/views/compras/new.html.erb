<% content_for :titulo, "Listado Bancos" %>

<body class="pantalla_pared"></body>

<center>
<h1>Seleccionar banco para hacer la compra</h1>
</center>

<table style="width:80%" >
  <thead>
    <tr>
      <th><h3>&nbsp;&nbsp;&nbsp;&nbsp;Nombre</h3></th>
      <th><h3>Titular</h3></th>
      <th><h3>Tipo</h3></th>
      <th><h3>Numero de Cuenta</h3></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bancos.each do |banco| %>
      <tr>
        <td><h4>&nbsp;&nbsp;&nbsp;&nbsp;<%= banco.nombre %></h4></td>
        <td><h4><%= banco.titular %></h4></td>
        <td><h4><%= banco.tipo_cuenta %></h4></td>
        <td><h4><%= banco.numero_cuenta %></h4></td>
        <td style="text-align: center" ><%= button_to 'Seleccionar', edit_compra_path(banco), :class => "btn-sm btn-info", method: :get %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

