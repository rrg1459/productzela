<% content_for :titulo, "Lista Usuarios" %>

<body class="pantalla_pared"></body>

<center>
<h1>Usuarios</h1>
</center>

<table style="width:80%" >
  <thead>
    <tr>
      <th><h3>&nbsp;&nbsp;&nbsp;&nbspNombre</h3></th>
      <th><h3>Celular</h3></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @usuarios.each do |usuario| %>
       <tr>
        <td><h4>&nbsp;&nbsp;&nbsp;&nbsp<%= usuario.nombre %></h4></td>
                <% mostrar = "(" + usuario.celular.to_s[0,4] + ")" + usuario.celular.to_s[4,3] + "-" + usuario.celular.to_s[7,9] %>
        <td><h4><%= mostrar %></h4></td>
        <td style="text-align: center" ><%= button_to 'Mostrar', usuario, :class => "btn-sm btn-info", method: :get %></td>
        <td style="text-align: center" ><%= button_to 'Editar', edit_usuario_path(usuario), :class => "btn-sm btn-warning", method: :get %></td>
        <td style="text-align: center" ><%= button_to 'Borrar', usuario, :class => "btn-sm btn-danger", method: :delete, data: { confirm: "Esta usted seguro que quiere borrar a #{usuario.nombre}???" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>&nbsp;&nbsp;&nbsp;&nbsp
<%= link_to 'Agregar Usuario', new_usuario_path %>
</h3>

